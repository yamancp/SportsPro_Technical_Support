@*directive to specify the model for this view is a collection of Technician objects
    because of the Index action method of the Technician Controller.*@
@model List<SportsPro.Models.Technician>
@{
    ViewBag.Title = "Technician Manager";
}

<h2>Technician List</h2>

@*a link to request the Add() action method of the Technician Controller.
    Allows user to add a new Technician.*@
<a asp-controller="Technician" asp-action="Add" class="btn btn-primary">Add New Technician</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*loops through the collection of Technician objects and displays each one in a row.*@
        @foreach (var tech in Model)
        {
            <tr>
                <td>@tech.Name</td>
                <td>@tech.Email</td>
                <td>@tech.Phone</td>
                <td>
                    @*links that request the Edit() and Delete() action methods of the
                        Technician Controller for that specifiec Technician*@
                    <a asp-controller="Technician" asp-action="Edit"
                       asp-route-id="@tech.TechnicianID" class="btn btn-outline-secondary" style="margin-left: 5px; margin-right: 5px">Edit</a>
                    <a asp-controller="Technician" asp-action="Delete"
                       asp-route-id="@tech.TechnicianID" class="btn btn-outline-danger" style="margin-left: 5px; margin-right: 5px">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>